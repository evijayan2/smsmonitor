<?xml version="1.0" encoding="utf-8"?>
<!--
    Pulse Message icon — 108dp adaptive icon foreground
    viewportWidth/Height: 108 (standard adaptive icon canvas)
    Safe zone: the centre 72dp square (18dp inset on each side)
    All shapes are drawn within the safe zone.
-->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!--
        Message bubble
        Rounded rect: top-left (20,28) to bottom-right (88,76)
        Corner radius ≈ 9
        Tail drops from bottom-left toward ~(18,88)
    -->
    <path
        android:pathData="
            M29,28 H79 A9,9 0 0 1 88,37
            V67 A9,9 0 0 1 79,76
            H40 L20,90
            V76
            A9,9 0 0 1 15,67
            V37 A9,9 0 0 1 24,28 Z"
        android:fillColor="#33FFFFFF"
        android:strokeColor="#55FFFFFF"
        android:strokeWidth="1"/>

    <!--
        ECG / heartbeat pulse line
        Runs horizontally through the bubble centre (y≈52)
        Points scaled to the 108dp viewport
    -->
    <path
        android:pathData="
            M20,52
            L32,52
            L38,40
            L44,64
            L50,52
            L62,52
            L66,46
            L70,58
            L74,52
            L88,52"
        android:strokeColor="#FFFFFFFF"
        android:strokeWidth="3.5"
        android:strokeLineCap="round"
        android:strokeLineJoin="round"
        android:fillColor="#00000000"/>

</vector>